; Example ini, needs to be placed in webroot

[general]
api_domain=http://127.0.0.1:8080
admins[]=
email_admin=
frontpage_language=nl

; editor    = shows articles voted on by channel 1 (admin)
; popular   = most popular across all channels chosen by system algorithm
; all       = all article across all channels
; mixed     = editor AND popular
; censored  = popular EXCEPT articles voted on by channel 1 (admin)
frontpage_mode=mixed

[content]
default_post_image=https://api.zaplog.pro/content/dark-background-3494082_1280.jpg
;broken_link_redirector="https://url.zaplog.pro?urlencoded="
broken_link_redirector="http://localhost:8080/Api.php/goto?urlencoded="
; prefix links with the Zaplog redirector

[memcache]
memcache_host=localhost
memcache_port=11211

[cors]
cors_origin[]=
cors_origin[]=
cors_expose_headers=
cors_max_age=1728000
cors_allow_credentials=1
cors_allow_methods=POST,GET,PUT,DELETE,PATCH
cors_allow_headers=Authorization,Content-Type

[database]
database_host=127.0.0.1
database_name=zaplog
database_user=
database_password=
database_charset=utf8
#enable = 1 disable = 0
database_query_logging=0

[smtp]
smtp_host=
smtp_login=
smtp_password=
smtp_secure=TLS
smtp_port=587

[email]
email_sender=
email_sendername=Zaplog
